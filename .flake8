[flake8]
max-line-length = 79
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info
ignore = 
    E203,  # whitespace before ':' (conflicts with black)
    W503,  # line break before binary operator (conflicts with black)
per-file-ignores =
    __init__.py:F401  # imported but unused (acceptable in __init__.py)
